.user-menu
  margin 0
  padding 0
  font-size 0

  &__item
    position relative
    display inline-block
    font-size 16px

    &:not(:first-child)::before
      content ""
      position absolute
      top 0
      bottom 0
      left -2px
      margin auto
      width 4px
      height 4px
      border-radius: 50%;
      background $color-text-dark

  &__link
    display block
    padding 8px 16px
    color $color-text-dark

    &:hover
      color $color-red

    &:active
      color $color-text-light
