/**
 * Основные структурные элементы
 */

html
body
  height 100%

.page
  display table
  border-collapse collapse
  width 100%
  height 100%
  min-height 100%

  &__header
  &__footer
    display table-row
    height 1px

  &__main
    display block

/**
 * Основной центрирующий блок
 */
.container
  margin-left auto
  margin-right auto
  width 940px
  padding-left 10px
  padding-right 10px
