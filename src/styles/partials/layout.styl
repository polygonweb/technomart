/**
 * Основные структурные элементы
 */

html
body
  height 100%

.page
  display table
  border-collapse collapse
  width 100%
  height 100%
  min-height 100%

  &__header
  &__footer
    display table-row
    height 1px

  &__main
    display block

/**
 * Сетка
 */
$gutter = 20px;
$cols = 12;

.container
  margin-left auto
  margin-right auto
  width 940px
  padding-left  ($gutter/2)
  padding-right ($gutter/2)

.grid-row
  margin-left  -($gutter/2)
  margin-right -($gutter/2)
  font-size 0

.grid-cell
  display inline-block
  vertical-align top
  box-sizing border-box
  font-size 1rem
  padding-left  ($gutter/2)
  padding-right ($gutter/2)

for $index in (1..$cols)
  .grid-cell_{$index}-{$cols}
    width "calc(100% * %s / %s)" % ($index $cols)
