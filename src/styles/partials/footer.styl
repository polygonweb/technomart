.page-footer
  color #f1f5f7
  font-family "Cuprum", sans-serif

  &__inner
    &::after
      content ""
      display table
      clear both

    & + &
      margin-top 32px

  &__top
    padding-bottom 56px
    font-size 18px
    background $color-text-dark

  &__bottom
    padding-top 35px
    padding-bottom 30px
    font-size 16px
    background $color-dark

  &__logo
    float left

  &__main-menu
    margin-top 38px

  &__address
    float left
    line-height 24px

  &__address-link
    color inherit
    text-decoration none

    &:hover
      text-decoration underline

    &:active
      opacity .5

  &__copy
    float left

  &__contacts
    float right

  &__social
    display block
    width auto
    overflow hidden
    text-align center
