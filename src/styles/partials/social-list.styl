.social-list
  margin 0
  padding 0
  list-style-type none
  font-size 0

  &__item
    margin 0 3px
    display inline-block

  &__link
    $size = 42px
    display block
    width  $size
    height $size
    line-height $size
    text-align center
    text-decoration none
    border-radius 50%
    color inherit
    background $color-dark-hover
    transition .2s

    &:hover
      background $color-red

  &__icon
    font-size 18px
    display inline-block
    vertical-align middle
