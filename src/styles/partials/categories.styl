.categories
  $gutter = 20px

  padding 50px 0 44px

  &::after
    content ""
    display table
    clear both

  &__inner
    margin-left  -($gutter/2)
    margin-right -($gutter/2)

  &__item
    margin ($gutter/2)
    float left
    box-sizing border-box
    width "calc(100% / 3 - %s)" % $gutter
    height 123px

    &_big
      width "calc(100% * 2 / 3 - %s)" % $gutter
      height 266px


.category
  position relative
  box-sizing border-box
  padding 20px 23px
  height 100%
  font-family "Cuprum", sans-serif
  background-color #ccc
  color #fff

  &::before
    content ""
    position absolute
    top 0
    bottom 0
    right 28px
    margin auto
    setSprite()

  &__title
    margin-bottom 12px
    font-size 24px
    line-height 1.25
    font-weight bold

  &__link
    display inline-block
    padding 0 24px
    overflow hidden
    line-height 38px
    text-transform uppercase
    text-decoration none
    color inherit
    background-color rgba(0, 0, 0, 0.1)
    border-radius 2px

    &:hover
      background-color rgba(0, 0, 0, 0.2)

    &:active
      background-color rgba(0, 0, 0, 0.3)

  &_materials
    background-color #f6b22d

    &::before
      right 44px
      sprite("materials")

  &_equip
    background-color #4aafde

    &::before
      sprite("equip")

  &_tech
    background-color #cc79d1

    &::before
      sprite("tech")

  &_discont
    background-color #85d179

    &::before
      sprite("discont")

  &_delivery
    background-color #f6b22d

    &::before
      sprite("delivery")

