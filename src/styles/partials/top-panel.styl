/**
 * Кнопки в верхней панели
 */
.panel-btn
  box-sizing border-box
  overflow hidden
  height 42px
  padding 0 18px
  white-space nowrap

  &__icon
    position relative
    top -1px
    vertical-align middle
    font-size inherit
    opacity 0.3
    transition 0.2s

  &__text
    vertical-align middle

  &__icon + &__text
    margin-left 14px

  &:hover &__icon
    opacity 1

  &:active &__icon
    opacity 0.5

  &:hover
    background $color-dark-hover

  &:active
    color rgba(#fff, 0.6)
    background $color-dark-active

  &[data-count]::after
      content ': 'attr(data-count)
      vertical-align middle

  &[data-count]:not([data-count="0"])
    background $color-red

    &:hover
      background $color-red-hover

    &:active
      background $color-red-active

  /* кнопка заказа как модификатор */
  &_order
    text-align center
    background $color-green

    &:hover
      box-shadow none
      background $color-green-hover

    &:active
      color rgba(#fff, 0.51)
      background $color-green-active

/**
 * Верхняя панель шапки
 */
.top-panel
  $panelHeight = 42px;
  height $panelHeight
  line-height $panelHeight
  font-size 17px
  font-family "Cuprum", sans-serif
  background $color-dark
  color #fff

  &::after
    content ""
    display table
    clear both

  &__logo
    margin 0
    float left
    width 220px

  &__form
    width 270px
    float left

  &__btn
    float left
    width 150px
    color inherit
    text-decoration none
