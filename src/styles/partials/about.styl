.about
  padding 75px 0 87px

  p
    margin 2em 0
    line-height: 24px

  &__title
    margin 0 0 25px
    font-size 30px
    font-weight normal
    font-family "Cuprum", sans-serif
    text-transform uppercase

  // &__desc
  .about__more-link
    margin-top 40px
    width 220px

  &__contacts
    margin-left calc(100% * 1 / 12)

.contacts-map
  margin 40px 0
  display block
  text-decoration none

  &__img
    width 100%
    vertical-align top

.map
  margin 0 -10px
  position relative
  height 447px

  &::after
    content ""
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background hsla(0, 0%, 100%, 0.9)
    transition .4s

  &__content
    position absolute
    top 0
    bottom 0
    left 0
    right 0

  &__loading
    position absolute
    z-index 1
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-size 1.5em
    color $color-text-dark
    transition .4s

  &_load::after
  &_load &__loading
    opacity 0
    visibility hidden

