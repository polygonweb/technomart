.btn
  position relative
  display inline-block
  vertical-align middle
  box-sizing border-box
  height 38px
  line-height 32px
  border 3px solid transparent
  padding 0 10px
  text-decoration none
  font-family inherit
  text-align center
  text-transform uppercase
  font-family "Cuprum", sans-serif
  background $color-red
  color #fff
  border-radius 3px
  cursor pointer

  .icon
    position absolute
    top 0
    bottom 0
    left 10px
    margin auto
    transform translateY(-2px)
    font-size 16px
    opacity .3

  &:hover
    background $color-red-hover

    .icon
      opacity 1

  &:active
    background $color-red-active

  &_full
    width 100%


  &_fill
    background-color $color-green
    border 0
    box-shadow 0 -3px #367315 inset

    &:hover
      background-color $color-green-hover

    &:active
      background-color $color-green-active
      box-shadow none

  &_outline
    border-color $color-green
    color $color-text-dark
    background #fff

    &:hover
      border-color $color-text-dark
      background #fff

    &:active
      opacity .3

  &_light
  &_light:hover
  &_light:active
    color #000
    border-width 1px
    border-color #e5e5e5
    background #fff

  &_light:hover
    border-color #bdc6ca

  &_light:active
    border-color $color-red

