.field
  margin-bottom 20px
  display block

  &__title
    margin-bottom 8px
    display block
    font 18px/1 "Cuprum", sans-serif

  &__control
    box-sizing border-box
    width 100%
    max-width 100%
    height 38px
    border 2px solid #d7dcde
    padding 0 14px
    border-radius 4px
    background #fff
    transition border-color .2s

    +placeholder()
      opacity 1
      font-size 1rem
      font-family "PT Sans", sans-serif
      text-overflow ellipsis !important
      color #999

    &_multiline
      padding-top    10px
      padding-bottom 10px
      resize vertical
      max-height 300px

    &:hover
      border-color $color-text-gray

    &:focus
      outline 0
      border-color $color-text-dark
