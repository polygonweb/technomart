.slider
  position relative
  width  100%
  height 100%
  overflow hidden
  background-color #f2f6f8
  color #fff

  &__nav-items
    position absolute
    z-index 2
    left 0
    right 0
    bottom 22px
    visibility hidden
    text-align center
    font-size 0

  &__btn
    position absolute
    z-index 2
    top 0
    bottom 0
    margin auto
    padding 25px
    border 0
    background 0
    color inherit
    cursor pointer
    transition .2s

    &::after
      content ""
      position absolute
      top 0
      bottom 0
      left 0
      right 0

    &_prev
      left 0

    &_next
      right 0

    &:hover
      background-color rgba(0, 0, 0, 0.2)

  &__btn-icon
    font-size 45px

.slide
  position absolute
  top 0
  left 0
  box-sizing border-box
  width 100%
  height 100%
  padding 15px 25px
  opacity 0
  // transition .4s

  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    object-fit cover

  &__header
    position relative
    font-size 18px
    line-height 24px

  &__title
    margin 0
    font-size 36px
    line-height 1.2
    font-weight bold
    text-transform uppercase

  &__link
    position absolute
    z-index 3
    left 25px
    bottom 22px
    width 195px

  &_active
    opacity 1

