.contacts-phone
  position relative
  display block
  border 3px solid #fff
  padding: 8px 5px 7px 71px
  font-size 21px
  color $color-red
  text-decoration none

  &__icon
    position absolute
    top 0
    bottom 0
    left 14px
    margin auto
    font-size 23px
    color $color-text-gray

  &:hover
    background #fff

.contacts-address
  display block
  padding 8px 10px
  font-size 14px
  color $color-text-dark
